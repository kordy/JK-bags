@import "~@common/stylus/varaiables.styl"

.jkb-product-list
	display flex
	flex-wrap wrap
	
.jkb-product-list-item
	width 250px
	margin-right 20px
	margin-bottom 20px
	
	&__img-w
		height 200px
		width 100%
		box-sizing border-box
		border 1px solid $border-color
		position relative
		margin-bottom 10px
		
	&__img-ww
		position absolute
		top 5px 
		left 5px 
		right 5px 
		bottom 5px 
		
	&__img
		max-width 100%
		max-height 100%
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		
	&__about
		padding: 0 10px
		
	&__name
		font-size 16px
		font-weight bold
		margin-bottom 5px
		
	&__description
		font-size 16px
		line-height 20px
		height 40px
		overflow hidden
		
	&__price
		font-size 20px
		margin-top 5px
		margin-bottom 10px
	
